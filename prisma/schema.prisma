generator client {
  provider = "prisma-client"
  output   = "../lib/prisma"
}

datasource db {
  provider = "postgresql"
}

// Better Auth models

model User {
  id String @id @default(cuid())

  name          String
  firstName     String?
  lastName      String?
  email         String
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt

  role       String    @default("user")
  banned     Boolean   @default(false)
  banReason  String?
  banExpires DateTime?

  sessions   Session[]
  accounts   Account[]
  profile    Profile?
  positions   Position[]   @relation("UserPositions")
  candidates  Candidate[]  @relation("UserCandidates")
  quizzes     Quiz[]       @relation("UserQuizzes")
  questions   Question[]   @relation("UserQuestions")
  evaluations Evaluation[] @relation("UserEvaluations")

  isAnonymous Boolean?

  @@unique([email])
  @@map("user")
}

model Session {
  id String @id @default(cuid())

  expiresAt      DateTime
  token          String
  ipAddress      String?
  userAgent      String?
  impersonatedBy String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("sessions")
}

model Account {
  id String @id @default(cuid())

  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("accounts")
}

model Verification {
  id String @id @default(cuid())

  identifier String
  value      String
  expiresAt  DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("verification")
}

// App-specific models
model Profile {
  id        String   @id @default(cuid())
  userId    String   @unique
  fullName  String?
  userName  String?
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("profiles")
}

model Position {
  id              String   @id @default(cuid())
  title           String
  description     String?
  experienceLevel String
  skills          String[]
  softSkills      String[]
  contractType    String?
  createdBy       String
  createdAt       DateTime @default(now())

  creator     User         @relation("UserPositions", fields: [createdBy], references: [id], onDelete: Cascade)
  candidates  Candidate[]
  quizzes     Quiz[]
  evaluations Evaluation[]

  @@map("positions")
}

model Candidate {
  id          String    @id @default(cuid())
  firstName   String
  lastName    String
  email       String
  dateOfBirth DateTime?
  positionId  String
  status      String    @default("pending")
  resumeUrl   String?
  createdBy   String
  createdAt   DateTime  @default(now())

  position    Position     @relation(fields: [positionId], references: [id], onDelete: Cascade)
  creator     User         @relation("UserCandidates", fields: [createdBy], references: [id], onDelete: Cascade)
  interviews  Interview[]
  evaluations Evaluation[]

  @@map("candidates")
}

model Quiz {
  id         String   @id @default(cuid())
  title      String
  positionId String
  timeLimit  Int?
  createdBy  String
  createdAt  DateTime @default(now())

  position      Position       @relation(fields: [positionId], references: [id], onDelete: Cascade)
  creator       User           @relation("UserQuizzes", fields: [createdBy], references: [id], onDelete: Cascade)
  interviews    Interview[]
  quizQuestions QuizQuestion[] // New: linked reusable questions

  @@map("quizzes")
}

model Interview {
  id          String    @id @default(cuid())
  candidateId String
  quizId      String
  status      String    @default("pending")
  startedAt   DateTime?
  completedAt DateTime?
  score       Float?
  answers     Json?
  token       String    @unique
  createdAt   DateTime  @default(now())

  candidate  Candidate   @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  quiz       Quiz        @relation(fields: [quizId], references: [id], onDelete: Cascade)
  evaluation Evaluation?

  @@map("interviews")
}

// Reusable questions entity
model Question {
  id             String   @id @default(cuid())
  type           QuestionType
  question       String   // The question text
  keywords       String[] @default([])
  explanation    String?
  
  // Multiple choice fields
  options        String[] @default([])
  correctAnswer  Int?
  
  // Open question fields
  sampleAnswer   String?
  
  // Code snippet fields
  codeSnippet    String?
  sampleSolution String?
  language       String?
  
  // Favorites feature
  isFavorite     Boolean  @default(false)
  
  // Metadata
  createdBy      String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  creator        User          @relation("UserQuestions", fields: [createdBy], references: [id], onDelete: Cascade)
  quizQuestions  QuizQuestion[]

  @@map("questions")
}

// Join table for Quiz-Question many-to-many relationship
model QuizQuestion {
  id         String   @id @default(cuid())
  quizId     String
  questionId String
  order      Int      // Order of question in the quiz
  createdAt  DateTime @default(now())

  quiz     Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([quizId, questionId])
  @@map("quiz_questions")
}

enum QuestionType {
  multiple_choice
  open_question
  code_snippet
}

// AI-generated evaluations for interviews (quiz-based) and candidates (resume-based)
model Evaluation {
  id    String @id @default(cuid())
  title String // Quiz name for interview eval, Position name for candidate eval

  // Polymorphic: one of interviewId or candidateId will be set
  interviewId String?    @unique // 1:1 with interview
  candidateId String?    // Many evaluations per candidate (different positions)
  positionId  String?    // Required for candidate evaluations to track which position

  // AI evaluation content (from OverallEvaluation interface)
  evaluation     String?  // Detailed text evaluation
  strengths      String[] @default([])
  weaknesses     String[] @default([])
  recommendation String?
  fitScore       Int?     // 0-10 scale (AI's candidate fit assessment)
  quizScore      Int?     // 0-100 percentage score from quiz answers (interview evals only)

  // Manual notes field
  notes String?

  // Metadata
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  interview Interview? @relation(fields: [interviewId], references: [id], onDelete: Cascade)
  candidate Candidate? @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  position  Position?  @relation(fields: [positionId], references: [id], onDelete: SetNull)
  creator   User       @relation("UserEvaluations", fields: [createdBy], references: [id], onDelete: Cascade)

  @@index([candidateId])
  @@index([positionId])
  @@map("evaluations")
}

model Preset {
  id           String   @id @default(cuid())
  name         String   @unique
  label        String
  description  String?
  icon         String   // Icon name from lucide-react
  questionType String   // multiple_choice, code_snippet, open_question
  instructions String?
  focusAreas   String[] @default([])
  distractorComplexity String?
  expectedResponseLength ExpectedResponseLength?
  evaluationCriteria String[] @default([])
  language     String?
  bugType      String?
  codeComplexity String?
  includeComments Boolean?
  tags         String[] // e.g., ["React", "Hooks", "Advanced"]
  difficulty   Int      @default(3) // 1-5 scale
  isDefault    Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("presets")
}

enum ExpectedResponseLength {
  short
  medium
  long
}

